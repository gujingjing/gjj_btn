<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toggle="http://schemas.android.com/apk/res"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ibesteeth.gjj_btn.MainActivity">

    <LinearLayout
        android:id="@+id/group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.example.btnlib.togglebutton.ToggleButton
            android:layout_width="54dp"
            android:layout_height="30dp" >
        </com.example.btnlib.togglebutton.ToggleButton>

        <com.example.btnlib.togglebutton.ToggleButton
            android:layout_marginLeft="20dp"
            android:layout_width="54dp"
            android:layout_height="30dp" >
        </com.example.btnlib.togglebutton.ToggleButton>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.example.btnlib.togglebutton.ToggleButton
            android:layout_width="54dp"
            toggle:onColor="#f00"
            toggle:offColor="#ddd"
            toggle:spotColor="#00f"
            toggle:offBorderColor="#000"
            toggle:borderWidth="2dp"
            android:layout_height="30dp" >
        </com.example.btnlib.togglebutton.ToggleButton>

        <com.example.btnlib.togglebutton.ToggleButton
            android:layout_marginLeft="20dp"
            android:layout_width="54dp"
            toggle:onColor="#f00"
            toggle:offColor="#ddd"
            toggle:spotColor="#00f"
            toggle:offBorderColor="#000"
            toggle:borderWidth="2dp"
            android:layout_height="30dp" >
        </com.example.btnlib.togglebutton.ToggleButton>
    </LinearLayout>



    <com.example.btnlib.togglebutton.ToggleButton
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp" />

    <com.example.btnlib.togglebutton.ToggleButton
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp" />

    <com.example.btnlib.togglebutton.ToggleButton
        android:layout_width="54dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        toggle:isDefaultOn="true"/>

</LinearLayout>
